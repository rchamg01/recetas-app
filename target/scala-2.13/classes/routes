# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#POST    /recetas                   controllers.RecetasController.create(nombre: String, edad: Int)
POST    /recetas                   controllers.RecetasController.create(request: Request)
GET     /recetas/                     controllers.RecetasController.getReceta(request: Request)
#GET     /recetas/nombre          controllers.RecetasController.getRecetaNombre(request: Request)
#GET     /recetas/id              controllers.RecetasController.getRecetaNombre(request: Request)
GET     /recetas/list              controllers.RecetasController.getListaRecetas
PUT     /recetas/                     controllers.RecetasController.updateReceta
DELETE  /recetas/:id                  controllers.RecetasController.deleteReceta(id: Long)
DELETE  /ingredientes/:id             controllers.RecetasController.deleteIngrediente(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
