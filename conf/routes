# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page

POST    /recetas                   controllers.RecetasController.create(request: Request)
GET     /recetas/tipo/:tipo        controllers.RecetasController.getRecetaTipo(tipo: String)
GET     /recetas/nombre/:nombre    controllers.RecetasController.getRecetaNombre(nombre: String)
GET     /recetas/id/:id            controllers.RecetasController.getRecetaId(id: Long)
#falta hacer get recetas con x ingrediente
GET     /recetas/list              controllers.RecetasController.getListaRecetas
PUT     /recetas/                  controllers.RecetasController.updateReceta
#falta hacer put de ingrediente
DELETE  /recetas/:id               controllers.RecetasController.deleteReceta(id: Long)
DELETE  /ingredientes/:id          controllers.RecetasController.deleteIngrediente(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
